@model FOMOWizard.Models.Staff
@{
    ViewData["Title"] = "EditStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Staff Details</h2>
<div class="row">
    <div class="col-md-4">

        <form asp-action="EditStaff" asp-controller="OperationsManager">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" rows="10" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" readonly/>
            </div>
            <div class="form-group row">
                <label asp-for="Role" class="col-sm-3 control-label"></label>
                <select asp-for="Role" asp-items="@ViewData["TypesOfRoles"] as List<SelectListItem>" class="form-control col-md-9" required></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div hidden>@(TempData["StaffID"] = TempData["StaffID"])</div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
            <div>@TempData["EditErrorMessage"]</div>
        </form>


    </div>
</div>

