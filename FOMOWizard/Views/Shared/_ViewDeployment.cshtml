@model IEnumerable<FOMOWizard.Models.Deployment>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table id="viewDeployment" class="table thead-dark table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>DeploymentID</th>
                    <th>DeploymentType</th>
                    <th>MID</th>
                    <th>TID</th>
                    <th>Schemes</th>
                    <th>MerchantType</th>
                    <th>SGQRID</th>
                    <th>SGQRVer</th>
                    <th>DeploymentPhoto</th>
                    <th>PhotoBefore</th>
                    <th>PhotoAfter</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.DeploymentID.ToString()</td>
                    <td>@item.DeploymentType.ToString()</td>
                    <td>@item.MID</td>
                    <td>@item.TID</td>
                    <td>@item.Schemes</td>
                    <td>@item.MerchantType</td>
                    <td>@item.SGQRID</td>
                    <td>@item.SGQRVersion</td>
                    <td>
                        @{ string imageFileName = item.DeploymentPhoto; }
                        <img src="~/images/@imageFileName"
                             style="width:50px" />
                    </td>
                    <td>
                        @{ string imageFileName2 = item.PhotoBefore; }
                        <img src="~/images/@imageFileName2"
                             style="width:100px" />
                    </td>
                    <td>
                        @{ string imageFileName3 = item.PhotoAfter; }
                        <img src="~/images/@imageFileName3"
                             style="width:100px" />
                    </td>
                    <td><a asp-action="Edit" asp-controller="OperationsStaff" asp-route-id="@item.DeploymentID">Edit</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <span style="color:red">No record found!</span>
}
